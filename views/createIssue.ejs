<!-- views/projectDetail.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= project.name %> Issues</title>
</head>
<body>
  <h1><%= project.name %> Issues</h1>
  
  <!-- Filter Form -->
  <form action="/projects/<%= project.id %>" method="get">
    <label for="labels">Filter by Labels:</label>
    <input type="text" id="labels" name="labels" placeholder="Enter labels">
    
    <label for="author">Filter by Author:</label>
    <input type="text" id="author" name="author" placeholder="Enter author">

    <label for="search">Search by Title or Description:</label>
    <input type="text" id="search" name="search" placeholder="Enter search term">

    <button type="submit">Apply Filters</button>
  </form>

  <!-- Display Filtered Issues -->
  <h2>Filtered Issues</h2>
  <ul>
    <% issues.forEach(issue => { %>
      <li>
        <strong><%= issue.title %></strong> - <%= issue.description %>
        <br>
        Labels: <%= issue.labels.join(', ') %>
        <br>
        Author: <%= issue.author %>
      </li>
    <% }); %>
  </ul>

  <!-- Display All Issues -->
  <h2>All Issues</h2>
  <ul>
    <% allIssues.forEach(issue => { %>
      <li>
        <strong><%= issue.title %></strong> - <%= issue.description %>
        <br>
        Labels: <%= issue.labels.join(', ') %>
        <br>
        Author: <%= issue.author %>
      </li>
    <% }); %>
  </ul>

  <!-- Create Issue Form -->
  <h2>Create a New Issue</h2>
  <form action="/projects/<%= project.id %>/issues/create" method="post">
    <input type="hidden" name="projectId" value="<%= project.id %>">

    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>
    <br>

    <label for="description">Description:</label>
    <textarea id="description" name="description" rows="4" required></textarea>
    <br>

    <label for="labels">Labels:</label>
    <input type="text" id="labels" name="labels" placeholder="Enter labels (comma-separated)">
    <br>

    <label for="author">Author:</label>
    <input type="text" id="author" name="author" required>
    <br>

    <button type="submit">Create Issue</button>
  </form>

  <br>
  <a href="/">Back to Home</a>
</body>
</html>
